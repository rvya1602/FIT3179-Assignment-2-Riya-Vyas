{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 350,
    "height": 500,
    "data": {
        "url": "data/undergrad_employment_salary.csv"
    },
    "transform": [
        {
            "bin": {
                "maxbins": 6
            },
            "field": "Median_Fulltime_Salary",
            "as": "Salary_Bin"
        },
        {
            "bin": {
                "maxbins": 6,
                "extent": [
                    50,
                    100
                ]
            },
            "field": "Fulltime_Employment",
            "as": "Employment_Bin"
        }
    ],
    "mark": "rect",
    "encoding": {
        "y": {
            "field": "Area_Of_Study",
            "type": "ordinal",
            "sort": "-x",
            "axis": {
                "title": "Area of Study",
                "titleFontSize": 14,
                "titleFontWeight": "bold",
                "labelFontSize": 12,
                "titleColor": "#4B0082"
            }
        },
        "x": {
            "field": "Salary_Bin",
            "type": "ordinal",
            "axis": {
                "title": "Median Full-time Salary (AUD)",
                "titleFontSize": 14,
                "titleFontWeight": "bold",
                "format": ",",
                "titleColor": "#4B0082"
            }
        },
        "color": {
            "field": "Employment_Bin",
            "type": "ordinal",
            "scale": {
                "range": [
                    "#ede7f6",
                    "#d1c4e9",
                    "#b39ddb",
                    "#9575cd",
                    "#673ab7",
                    "#311b92"
                ]
            },
            "legend": {
                "title": [
                    "Percent of Undergrads",
                    "Employed Full-Time"
                ],
                "labelExpr": "datum.value + '%'",
                "orient": "bottom-right"
            }
        },
        "tooltip": [
            {
                "field": "Area_Of_Study",
                "type": "nominal",
                "title": "Field of Study"
            },
            {
                "field": "Fulltime_Employment",
                "type": "quantitative",
                "title": "Full-Time Employment (%)"
            },
            {
                "field": "Median_Fulltime_Salary",
                "type": "quantitative",
                "title": "Median Full-Time Salary (AUD)",
                "format": "$,.0f"
            }
        ]
    }
}