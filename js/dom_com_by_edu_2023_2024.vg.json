{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 620,
    "height": 240,
    "data": {
        "url": "data/dom_commencements_by_edu_2023_2024.csv"
    },
    "layer": [
        {
            "mark": {
                "type": "bar"
            },
            "encoding": {
                "y": {
                    "field": "Field",
                    "type": "nominal",
                    "axis": {
                        "title": "Area of Study",
                        "titleFontSize": 14,
                        "titleFontWeight": "bold",
                        "labelFontSize": 12,
                        "titleColor": "#4B0082"
                    }
                },
                "x": {
                    "field": "Percent_Change",
                    "type": "quantitative",
                    "title": "Change (%)",
                    "axis": {
                        "grid": true,
                        "labelExpr": "datum.label + '%'",
                        "titleFontSize": 14,
                        "titleFontWeight": "bold",
                        "titleColor": "#4B0082"
                    }
                },
                "color": {
                    "condition": {
                        "test": "datum.Percent_Change > 0",
                        "value": "#66c2a5"
                    },
                    "value": "#b299e6"
                },
                "tooltip": [
                    {
                        "field": "Field",
                        "title": "Area of Study"
                    },
                    {
                        "field": "Percent_Change",
                        "format": ".1f",
                        "title": "Change (%)"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 3,
                "fontWeight": "bold"
            },
            "encoding": {
                "y": {
                    "field": "Field",
                    "type": "nominal"
                },
                "x": {
                    "field": "Percent_Change",
                    "type": "quantitative"
                },
                "text": {
                    "field": "Percent_Change",
                    "type": "quantitative",
                    "format": ".1f"
                }
            }
        }
    ],
    "config": {
        "view": {
            "stroke": "transparent"
        },
        "axis": {
            "grid": true
        }
    }
}