{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "width": 400,
    "height": 300,
    "data": {
        "url": "data/dom_vs_int_students_2015_2024.csv"
    },
    "transform": [
        {
            "fold": [
                "Domestic_students",
                "Overseas_students"
            ],
            "as": [
                "series",
                "count"
            ]
        },
        {
            "calculate": "datum.series == 'Domestic_students' ? 'Domestic' : 'International'",
            "as": "StudentType"
        }
    ],
    "mark": {
        "type": "area",
        "interpolate": "monotone",
        "opacity": 0.8
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "timeUnit": "year",
            "axis": {
                "format": "%Y",
                "title": "Year",
                "tickCount": 7,
                "titleFontSize": 14,
                "titleFontWeight": "bold",
                "titleColor": "#4B0082",
                "labelFontSize": 12
            }
        },
        "y": {
            "aggregate": "sum",
            "field": "count",
            "title": "Number of Students",
            "axis": {
                "tickCount": 7,
                "titleFontSize": 14,
                "titleFontWeight": "bold",
                "titleColor": "#4B0082",
                "labelFontSize": 12
            }
        },
        "color": {
            "field": "StudentType",
            "title": "Student Type",
            "scale": {
                "scheme": "category20b"
            },
            "legend": {
                "orient": "bottom",
                "titleFontSize": 14,
                "labelFontSize": 12,
                "symbolSize": 150,
                "padding": 10,
                "titlePadding": 5,
                "symbolType": "square",
                "titleColor": "#4B0082"
            }
        },
        "tooltip": [
            {
                "field": "Year",
                "type": "temporal",
                "title": "Year",
                "format": "%Y"
            },
            {
                "field": "StudentType",
                "type": "nominal",
                "title": "Student Type"
            },
            {
                "field": "count",
                "type": "quantitative",
                "title": "Number of Students",
                "format": ","
            }
        ]
    }
}