{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 700,
    "view": {
        "stroke": null
    },
    "title": {
        "text": "Percent of Population with Bachelor or Higher by State",
        "fontSize": 20,
        "fontWeight": "bold"
    },
    "data": {
        "url": "map/STE_2016_AUST.json",
        "format": {
            "type": "topojson",
            "feature": "STE_2016_AUST"
        }
    },
    "transform": [
        {
            "lookup": "properties.STE_NAME16",
            "from": {
                "data": {
                    "url": "data/state_pop_15_or_above_bachelors_or_higher_percent.csv"
                },
                "key": "State",
                "fields": [
                    "Percent_Population",
                    "Number_Population"
                ]
            }
        },
        {
            "calculate": "datum.properties.STE_NAME16",
            "as": "State_Name"
        },
        {
            "calculate": "datum.Percent_Population < 25 ? '20–25%' : datum.Percent_Population < 30 ? '25–30%' : datum.Percent_Population < 35 ? '30–35%' : '35%+'",
            "as": "Percent_Range"
        }
    ],
    "projection": {
        "type": "mercator"
    },
    "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 1
    },
    "encoding": {
        "color": {
            "field": "Percent_Range",
            "type": "nominal",
            "scale": {
                "domain": [
                    "20–25%",
                    "25–30%",
                    "30–35%",
                    "35%+"
                ],
                "range": [
                    "#deebf7",
                    "#9ecae1",
                    "#4292c6",
                    "#08519c"
                ]
            },
            "legend": {
                "title": "Percent of Population (Aged 15 Years and Over) with Bachelor’s Degree or Higher",
                "titleFontSize": 16,
                "titleFontWeight": "bold",
                "labelFontSize": 14,
                "symbolSize": "400",
                "symbolType": "square",
                "orient": "top-left",
                "titleLimit": 800,
                "offset": 0
            }
        },
        "tooltip": [
            {
                "field": "State_Name",
                "type": "nominal",
                "title": "State"
            },
            {
                "field": "Percent_Population",
                "type": "quantitative",
                "title": "Bachelor’s or Higher (Pop. %)",
                "format": ".1f"
            },
            {
                "field": "Number_Population",
                "type": "quantitative",
                "title": "Number of People",
                "format": ","
            }
        ]
    }
}