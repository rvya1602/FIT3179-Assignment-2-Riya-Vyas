{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 350,
    "height": 320,
    "data": {
        "url": "data/international_students_by_cob_20.csv"
    },
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "No_Int_Students_2024",
                    "type": "quantitative",
                    "title": "Number of International Students",
                    "axis": {
                        "titleFontSize": 14,
                        "titleFontWeight": "bolder",
                        "titleColor": "#4B0082",
                        "labelFontSize": 12
                    }
                },
                "y": {
                    "field": "Country",
                    "type": "nominal",
                    "sort": "none",
                    "title": "Country",
                    "axis": {
                        "titleFontSize": 14,
                        "titleFontWeight": "bolder",
                        "titleColor": "#4B0082",
                        "labelFontSize": 12
                    }
                },
                "color": {
                    "value": "#7570B3"
                },
                "opacity": {
                    "value": 1
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "No_Int_Students_2024",
                        "type": "quantitative",
                        "title": "No. Students",
                        "format": ","
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "bottom",
                "dx": 3,
                "dy": 3,
                "fontWeight": "bold"
            },
            "encoding": {
                "x": {
                    "field": "No_Int_Students_2024",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Country",
                    "type": "nominal",
                    "sort": "none"
                },
                "text": {
                    "field": "studentLabel",
                    "type": "nominal"
                },
                "color": {
                    "value": "#000"
                }
            },
            "transform": [
                {
                    "calculate": "format(datum.No_Int_Students_2024, ',')",
                    "as": "studentLabel"
                }
            ]
        }
    ]
}